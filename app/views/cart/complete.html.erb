<% content_for :head do %>
 <%= stylesheet_link_tag "front/cart" %>
 <%= javascript_include_tag :defaults %>
 <%= javascript_include_tag "recommender_details" %>
 <%= javascript_include_tag js_url(:action => "application") %>
<% end %>

<h2 class="main_t">ご注文の完了</h2>
<div id="cart">
  <%= image_tag("cart/route04.gif", :width => "583", :height => "31", :alt => "ご購入の流れ", :class => "route") %>

  <p class="comp">ご注文ありがとうございました。</p>
  <p class="comp_s">只今、ご注文の確認メールをお送りさせていただきました。<br />
万一、ご確認メールが届かない場合は、トラブルの可能性もありますので大変お手数ではありますが
もう一度お問い合わせ頂くか、お電話にてお問い合わせくださいませ。<br />
 今後ともご愛願賜りますようよろしくお願い申し上げます。</p>
  <dl class="inq">
    <dt>お問い合わせ、ご連絡はこちら</dt>
    <dd><%=h @shop.corp_name %></dd>
    <dd>お電話：<%=h @shop.tel %> <%=h @shop.businesstime %></dd>
    <dd>メール：<%=h @shop.mail_faq %></dd>
  </dl>

<div class="cart_complete">
  <% if @login_customer%>
    <%- flash[:order_ids].each do |key, order_id| %>
      <p><%= link_to '今回の購入履歴を確認', :controller => 'accounts', :action => 'history_show', :id => order_id %></p>
    <% end %>
  <%end%>
  <p><%= link_to 'トップページへ', :controller => 'portal', :action => 'show' %></p>
</div>
</div>

<%# レコメンダー %>
<%= render :partial => '/base/recommend_asp', :locals => {:size => 4} %>

