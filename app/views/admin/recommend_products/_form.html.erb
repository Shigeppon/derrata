
<% form_for [:admin, @recommend_product], :html => {:name => "f"} do |f| %>
<%= f.error_messages %>
<p class="req"><span class="pnt">※</span>は必須入力です。</p>
<table cellspacing="1" collpadding="0" class="data">
  <tr>
    <th>商品名<span class="pnt">※</span></th>
    <td>
      <span id="product_name">
        <% if @recommend_product.product %>
          <%= @recommend_product.product.name %>
        <% else %>
          未登録
        <% end %>
      </span>
      &nbsp;&nbsp;&nbsp;
      <input type="button" class="btn_s" name="search" value="検索" method="get" onclick="fnSearchSubWindow('product_search', 1000, 400);">
  </td>
  </tr>
  <tr>
    <th>オススメコメント<span class="pnt">※</span></th>
    <td><%= f.text_area :description, :class=>"data_l", :rows=>"6", :cols=>"50" %></td>
  </tr>
</table>
<%= f.hidden_field :product_id %>
<%= f.hidden_field :id %>
<div class="btn_box">
  <%= f.submit "この内容で登録する", :class=>"btn" %>
  <%= image_tag("btn_side.gif", :width => "6", :height => "34", :class => "btn_side") %>
</div>
<% end %>
