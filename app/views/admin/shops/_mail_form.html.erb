<%= error_messages_for :mail %>

<table class="data" cellspacing="1" cellpadding="0">
  <tr>
    <th>メールタイトル <span class="pnt">※</span></th>
    <td><%= text_field :mail, :title, :class => "data_m" %></td>
  </tr>

  <tr>
