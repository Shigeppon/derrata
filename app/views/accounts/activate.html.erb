<% content_for :head do %>
  <%= stylesheet_link_tag "front/entry" %>
<% end %>

<ol id="bread_list" class="m_btm"><li class="bread_top"><%= link_to "トップページ", :controller => :portal, :action => :show %></li><li><%= link_to "利用規約", :controller => :accounts, :action => :kiyaku %></li><li><%= link_to "会員登録", :controller => :accounts, :action => :signup %></li><li><%= @customer ? "登録完了" : "登録失敗" %></li></ol>
<h2 class="main_t">会員登録</h2>
<div id="entry">
  <% if @customer %>
    <div id="complete_area">
      <p class="comp">会員登録が完了しました。</p>
      <p><%= link_to 'ログインページへ', :action => 'login' %></p>
    </div>
  <% else %>
    <div id="complete_area">
      <p>すでに登録完了されているか、URL が違います。</p>
    </div>
  <% end %>
</div>
