<%- if request.mobile.instance_of?(Jpmobile::Mobile::Docomo) -%>
@<%= Customer::DOMAIN_DOCOMO %>
<%= hidden_field_tag 'customer[email_domain]', Customer::DOMAIN_DOCOMO unless confirm %>
<%- elsif request.mobile.instance_of?(Jpmobile::Mobile::Au) -%>
@<%= Customer::DOMAIN_AU %>
<%= hidden_field_tag 'customer[email_domain]', Customer::DOMAIN_AU unless confirm %>
<%- elsif request.mobile.instance_of?(Jpmobile::Mobile::Softbank) -%>
@<%= select_tag 'customer[email_domain]', constant_options(Constant::DOMAIN_SOFTBANK, @customer.email_domain)  unless confirm %>
<%- else -%>
対応していない機種です。
<%- end -%>
